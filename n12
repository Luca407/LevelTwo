#include <stdio.h>
#include <stdlib.h>
#include <Windows.h>

int main () {

	float num1, num2;

do {
        printf("Digite um numero: ");
        scanf("%f", &num1);
        printf("Digite mais um numero: ");
        scanf("%f", &num2);
        
        float soma = num1 + num2;

      
        if (soma < 0) {
            printf("IMPOSSIVEL FAZER A CONTA!!!\nRefaca a conta!");  
            Sleep(1500);
            system("cls");
    
            continue;
        }

        printf("A soma dos numeros e: %.1f\n", soma);
        break;

    } while (1); 
    
    return 0;
}
