#include <stdio.h> 
#include <stdlib.h> 
#include <ctype.h> 

int main() { 

char str[100]; 
int i, vogais = 0;

printf("Digite uma string: ");
fgets(str, sizeof(str), stdin);

for (i = 0; str[i] != '\0'; i++) {
    char ch = tolower(str[i]);

    if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
        vogais++;
    }
}

printf("NÃºmero de vogais na string: %d\n", vogais);

return 0;
}
